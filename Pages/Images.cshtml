
@page "{userId?}"
@model AskeOgViktorProjekt.Pages.ImagesModel
@{
    ViewData["Title"] = "Images";
}

<h2>Upload Image</h2>

<form method="post" enctype="multipart/form-data">
    @* Anti-forgery token is recommended *@
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="ImageFile" class="form-label">Choose image</label>
        <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
        <small class="text-muted">Max 5 MB. JPG/PNG/WebP only.</small>
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<partial name="_ValidationScriptsPartial" />

@if (Model.RecentImage is not null)
{
    <hr />
    <h4>Uploaded</h4>
    <p>@Model.RecentImage.OriginalFileName (@Model.RecentImage.ContentType)</p>
    @Model.RecentImage.RelativePath
}

